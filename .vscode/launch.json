{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Debug Vue App",
      "url": "http://localhost:5173", // Adjust to your app's URL
      "webRoot": "${workspaceFolder}/src",
      "sourceMapPathOverrides": {
        "webpack:///./*": "${webRoot}/*",
        "webpack:///src/*": "${webRoot}/*"
      },
      "preLaunchTask": "npm: dev", // Runs `npm run dev` before debugging
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}